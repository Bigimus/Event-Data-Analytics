#:kivy 2.1.0
#:import Factory kivy.factory.Factory

WindowManager:
    #LoginWindow:
    #HomeWindow: 
    #CreateWindow:
    SettingsWindow:

<CustomMDCard@MDCard>:
    background: "Images/Card_Background.png"

<CustomTextField@MDTextField>:
    hint_font_size: dp(30)
    font_size: dp(20) 
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    multiline: False
    mode: "rectangle"

    #Normal
    line_color_normal: 1, 1, 1, 1
    hint_text_color_normal: 1, 1, 1, 1
    text_color_normal: 1, 1, 1, 1

    #Active
    line_color_focus: 1, 1, 1, 1
    hint_text_color_focus: 1, 1, 1, 1
    text_color_focus: 1, 1, 1, 1

<BackgroundImage@Image>:
    source: "Images/Background.jpg"
    allow_stretch: True
    keep_ratio: False

<LoginWindow>:
    name: "login"

    BackgroundImage:

    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDCard:
            size_hint: 0.3, 0.3
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(25)
            background: "Images/Card_Background.png"

            CustomTextField:
                id: root_username
                hint_text: "Username"

            RelativeLayout:
                CustomTextField:
                    id: root_password
                    hint_text: "Password"
                    password: True

                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_x": 0.95, "center_y": 0.45}
                    text_color: 1, 1, 1, 1
                    theme_text_color: "Custom"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        root_password.password = False if root_password.password is True else True

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "bottom"

                MDRaisedButton:
                    text: "Login"
                    md_bg_color: "#186cf0"
                    font_size: dp(24)
                    on_release: 
                        if root.validateLogin(root_username.text, root_password.text) == "True": \
                        root.manager.current = "home" 
                        root.manager.transition.direction = "left"

<HomeWindow>:
    name: "home"

    BackgroundImage:
    
    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(20)

            MDBoxLayout:
                orientation: "horizontal"
                padding_x: dp(20)
                spacing: dp(20)
            
                CustomMDCard:
                    id: create
                    spacing: dp(20)
                    valign: "center"
                    on_release: root.manager.current = "create"

                    AnchorLayout:
                        anchor_x: "left"
                        anchor_y: "top"
                        size_hint: 0.1, 0.1

                        MDIconButton:
                            icon: "cog"
                            on_release: 
                                root.manager.current = "settings"
                                app.loadSettings()

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(125)
                        spacing: dp(40)
                        valign: "center"

                        MDIcon:
                            icon: "account-arrow-up"
                            font_size: dp(65)
                            pos_hint: {"center_x": 0.5}
                            halign: "center"

                        MDLabel:
                            text: "Create"
                            font_size: dp(30)
                            bold: True
                            halign: "center"

                CustomMDCard:
                    id: account_search
                    padding: dp(100)
                    background: "Images/Card_Background.png"
                    on_release: print("Search")
                    MDIcon:
                        icon: "magnify"
                        font_size: dp(65)
                        pos_hint: {"center_x": 0.5}
                        halign: "center"

                    MDLabel:
                        text: "Search"
                        font_size: dp(30)
                        bold: True
                        halign: "center"

            MDBoxLayout:
                orientation: "horizontal"
                padding_x: dp(20)
                spacing: dp(20)
                CustomMDCard:
                    
                CustomMDCard:

<CreateWindow>:
    name: "create"

    BackgroundImage:

    MDAnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDCard:
            orientation: "vertical"
            padding: dp(30), dp(30)
            spacing: dp(30)
            size_hint: 0.5, 0.7

            CustomTextField:
                id: client_id
                hint_text: "Select Client ID"
                size_hint: 1, 1
                readonly: True
                on_focus: 
                    if self.focus: \
                    root.openClientMenu()
                    
            CustomTextField:
                id: event_name
                hint_text: "Event Name"
                size_hint: 1, 1,

            CustomTextField:
                id: event_location
                hint_text: "Event Location"

            CustomTextField:
                id: event_date
                hint_text: "Event Date"

            MDBoxLayout:
                MDRaisedButton:
                    id: event_create
                    text: "Submit"
                    font_size: dp(20)
                    pos_hint: {"center_y": 0.5}
                    on_release:
                        if app.validateData(client_id.text, event_name.text, event_location.text, event_date.text) == True: \
                        root.createAccount(client_id.text, event_name.text, event_location.text, event_date.text)
                        
                AnchorLayout:
                    anchor_x: "right"

                    MDRaisedButton:
                        text: "Home"
                        font_size: dp(20)
                        color: "red"
                        on_release: 
                            root.manager.current = "home"

<SettingsWindow>:
    name: "settings"

    BackgroundImage:

    MDCard:
        size_hint: 0.95, 0.95
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(20)
            padding: dp(20)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)
                size_hint: 0.1, 1

                MDIconButton:
                    icon: "home"
                    on_release: 
                        root.manager.current = "home"
                
                MDIconButton:
                    icon: "content-save-cog"
                    on_release: 
                        if app.validateData(root_username.text, root_password.text, host.text, database_username.text, database_password.text, database.text) == True: \
                        root.saveSettings(root_username.text, root_password.text, host.text, database_username.text, database_password.text, database.text)

                
                Widget:

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)

                MDLabel:
                    text: "DATABASE"
                    font_size: dp(32)
                    halign: "center"

                CustomTextField:
                    id: host
                    text: app.host
                    hint_text: "Host"

                CustomTextField:
                    id: database_username
                    text: app.database_username
                    hint_text: "Database Username"

                RelativeLayout:
                    CustomTextField:
                        id: database_password
                        text: app.database_password
                        hint_text: "Database Password"
                        password: True

                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_x": 0.95, "center_y": 0.45}
                        text_color: 1, 1, 1, 1
                        theme_text_color: "Custom"
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            database_password.password = False if database_password.password is True else True

                CustomTextField:
                    id: database
                    text: app.database
                    hint_text: "Database"
                
                MDLabel:
                    text: "ROOT"
                    font_size: dp(32)
                    halign: "center"

                CustomTextField:
                    id: root_username
                    text: app.root_username
                    hint_text: "Root Username"

                RelativeLayout:
                    CustomTextField:
                        id: root_password
                        text: app.root_password
                        hint_text: "Root Password"
                        password: True

                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_x": 0.95, "center_y": 0.45}
                        text_color: 1, 1, 1, 1
                        theme_text_color: "Custom"
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            root_password.password = False if root_password.password is True else True

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)

